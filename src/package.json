{
  "name": "ai-augmented-terminal",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run build && electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:renderer\"",
    "watch:main": "webpack --config webpack.main.config.js --watch",
    "watch:renderer": "webpack --config webpack.renderer.config.js --watch",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others \"npm run watch\" \"electron .\"",
    "test": "npm run test:unit",
    "test:unit": "jest tests/unit",
    "test:e2e": "npm run build && cross-env E2E_TEST=true npx playwright test tests/e2e",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Cross-platform desktop terminal application with AI assistance",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@xterm/addon-fit": "^0.9.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "electron-store": "^9.0.0",
    "node-pty": "github:microsoft/node-pty",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remixicon": "^4.2.0",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/electron": "^1.4.38",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "daisyui": "^5.0.35",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "jest": "^29.7.0",
    "playwright": "^1.45.3",
    "postcss": "^8.4.40",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.7",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  }
}
